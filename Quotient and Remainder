<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quotient & Remainder Calculator</title>
    <style>
        /* This is CSS - It makes the page look clean */
        body { font-family: sans-serif; display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f0f0f0; }
        .container { background: white; padding: 2rem; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); width: 300px; }
        input { width: 100%; padding: 8px; margin: 10px 0; box-sizing: border-box; }
        button { width: 100%; padding: 10px; background-color: #007BFF; color: white; border: none; border-radius: 4px; cursor: pointer; }
        button:hover { background-color: #0056b3; }
        .result { margin-top: 15px; font-weight: bold; }
    </style>
</head>
<body>

<div class="container">
    <h2>C-Style Calculator</h2>
    <label>Dividend (Number):</label>
    <input type="number" id="dividend" placeholder="Enter dividend">
    
    <label>Divisor (Number):</label>
    <input type="number" id="divisor" placeholder="Enter divisor">
    
    <button onclick="calculate()">Calculate</button>
    
    <div class="result" id="output">Results will appear here</div>
</div>

<script>
    // This is JavaScript - It does what your C code used to do
    function calculate() {
        // 1. Get values from the inputs
        // "parseInt" forces the input to be an integer, just like 'int' in C
        let dividend = parseInt(document.getElementById('dividend').value);
        let divisor = parseInt(document.getElementById('divisor').value);
        
        // 2. Validation (Don't divide by zero)
        if (isNaN(dividend) || isNaN(divisor)) {
            document.getElementById('output').innerHTML = "Please enter valid numbers.";
            return;
        }
        if (divisor === 0) {
            document.getElementById('output').innerHTML = "Cannot divide by zero.";
            return;
        }

        // 3. The Math
        // In JS, division results in decimals. We use Math.floor to act like C integer division.
        let quotient = Math.floor(dividend / divisor);
        let remainder = dividend % divisor;

        // 4. Show the result
        document.getElementById('output').innerHTML = 
            `Quotient: ${quotient} <br> Remainder: ${remainder}`;
    }
</script>

</body>
</html>
